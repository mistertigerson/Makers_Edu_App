<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/accountFragment">

    <fragment
        android:id="@+id/firstRegistrationFragment"
        android:name="com.test.makers_edu_app.presentation.ui.fragments.firstRegistration.FirstRegistrationFragment"
        android:label="fragment_first_registration"
        tools:layout="@layout/fragment_first_registration">

        <action
            android:id="@+id/action_firstRegistrationFragment_to_secondRegistrationFragment"
            app:destination="@id/secondRegistrationFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.test.makers_edu_app.presentation.ui.fragments.search.SearchFragment"
        android:label="search"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/authorizationFragment"
        android:name="com.test.makers_edu_app.presentation.ui.fragments.auth.AuthorizationFragment"
        android:label="authorization"
        tools:layout="@layout/fragment_authorization">
        <action
            android:id="@+id/action_authorizationFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>

    <fragment
        android:id="@+id/accountFragment"
        android:name="com.test.makers_edu_app.presentation.ui.fragments.account.AccountFragment"
        android:label="account"
        tools:layout="@layout/fragment_account" />
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.test.makers_edu_app.presentation.ui.fragments.main.MainFragment"
        android:label="main"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" >
        </action>
    </fragment>
    <fragment
        android:id="@+id/educationFragment"
        android:name="com.test.makers_edu_app.presentation.ui.fragments.education.EducationFragment"
        android:label="education"
        tools:layout="@layout/fragment_education" />
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.test.makers_edu_app.presentation.ui.fragments.details.DetailsFragment"
        android:label="fragment_details"
        tools:layout="@layout/fragment_details" >
        <argument
            android:name="title"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/secondRegistrationFragment"
        android:name="com.test.makers_edu_app.presentation.ui.fragments.secondRegistration.SecondRegistrationFragment"
        android:label="fragment_second_registration"
        tools:layout="@layout/fragment_second_registration" />
    <fragment
        android:id="@+id/courseFragment"
        android:name="com.test.makers_edu_app.presentation.ui.fragments.account.course.CourseFragment"
        android:label="fragment_course"
        tools:layout="@layout/fragment_course" />
    <fragment
        android:id="@+id/editAccountFragment"
        android:name="com.test.makers_edu_app.presentation.ui.fragments.account.EditAccountFragment"
        android:label="fragment_edit_account"
        tools:layout="@layout/fragment_edit_account" />

</navigation>